<Window x:Class="Library.Presentation.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Library.Presentation.ViewModels"
        Title="Library Management" Height="600" Width="800">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    
    <TabControl>
        <!-- Books Tab -->
        <TabItem Header="Books">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <ListView ItemsSource="{Binding Books}" 
                        SelectedItem="{Binding SelectedBook}"
                        Margin="5">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock Text="{Binding Title}" FontWeight="Bold"/>
                                <TextBlock Text="{Binding Author}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <StackPanel Grid.Column="1" DataContext="{Binding SelectedBook}" Margin="10">
                    <TextBox Text="{Binding Title, Mode=TwoWay}" Margin="0,5"/>
                    <TextBox Text="{Binding Author, Mode=TwoWay}" Margin="0,5"/>
                </StackPanel>
            </Grid>
        </TabItem>

        <!-- Users Tab -->
        <TabItem Header="Users">
            <Grid>
                <!-- Similar structure for users -->
            </Grid>
        </TabItem>
    </TabControl>
</Window>