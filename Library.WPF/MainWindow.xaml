<Window x:Class="Library.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Library Management System" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="MinWidth" Value="80"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <Style TargetType="Label">
            <Setter Property="Margin" Value="5"/>
        </Style>

        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Menu Grid.Row="0">
            <MenuItem Header="_File">
                <MenuItem Header="_Load Data" Command="{Binding LoadDataCommand}"/>
                <Separator/>
                <MenuItem Header="E_xit" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="_Users">
                <MenuItem Header="_Add User" Command="{Binding AddUserCommand}"/>
                <MenuItem Header="_Edit User" Command="{Binding EditUserCommand}"/>
                <MenuItem Header="_Delete User" Command="{Binding DeleteUserCommand}"/>
            </MenuItem>
            <MenuItem Header="_Books">
                <MenuItem Header="_Add Book" Command="{Binding AddBookCommand}"/>
                <MenuItem Header="_Edit Book" Command="{Binding EditBookCommand}"/>
                <MenuItem Header="_Delete Book" Command="{Binding DeleteBookCommand}"/>
            </MenuItem>
        </Menu>

        <!-- Main Content -->
        <TabControl Grid.Row="1" Margin="10">

            <!-- Users Tab -->
            <TabItem Header="Users Management">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Users Master List -->
                    <GroupBox Grid.Column="0" Header="Users" Margin="5">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Search/Filter -->
                            <TextBox Grid.Row="0" Name="UserSearchBox" 
                                   Text="{Binding UserSearchText, UpdateSourceTrigger=PropertyChanged}"
                                   Margin="5" Padding="5"/>

                            <!-- Users List -->
                            <ListBox Grid.Row="1" 
                                   ItemsSource="{Binding Users}" 
                                   SelectedItem="{Binding SelectedUser}"
                                   Margin="5">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                            <TextBlock Text="{Binding Email}" FontSize="10" Foreground="Gray"/>
                                            <TextBlock Text="{Binding TypeDisplay, Mode=OneWay}" FontSize="10" Foreground="Blue"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>

                            <!-- User Action Buttons -->
                            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="Add" Command="{Binding AddUserCommand}"/>
                                <Button Content="Edit" Command="{Binding EditUserCommand}"/>
                                <Button Content="Delete" Command="{Binding DeleteUserCommand}"/>
                            </StackPanel>
                        </Grid>
                    </GroupBox>

                    <!-- User Details -->
                    <GroupBox Grid.Column="1" Header="User Details" Margin="5">
                        <Grid DataContext="{Binding SelectedUser}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Label Grid.Row="0" Grid.Column="0" Content="ID:"/>
                            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Id}" IsReadOnly="True"/>

                            <Label Grid.Row="1" Grid.Column="0" Content="Name:"/>
                            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Name}" IsReadOnly="True"/>

                            <Label Grid.Row="2" Grid.Column="0" Content="Email:"/>
                            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Email}" IsReadOnly="True"/>

                            <Label Grid.Row="3" Grid.Column="0" Content="Phone:"/>
                            <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding PhoneNumber}" IsReadOnly="True"/>

                            <Label Grid.Row="4" Grid.Column="0" Content="Type:"/>
                            <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding TypeDisplay, Mode=OneWay}" IsReadOnly="True"/>

                            <Label Grid.Row="5" Grid.Column="0" Content="Registered:"/>
                            <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding RegistrationDate, StringFormat=d, Mode=OneWay}" IsReadOnly="True"/>
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>

            <!-- Books Tab -->
            <TabItem Header="Books Management">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Books Master List -->
                    <GroupBox Grid.Column="0" Header="Books" Margin="5">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Search/Filter -->
                            <TextBox Grid.Row="0" Name="BookSearchBox" 
                                   Text="{Binding BookSearchText, UpdateSourceTrigger=PropertyChanged}"
                                   Margin="5" Padding="5"/>

                            <!-- Books List -->
                            <ListBox Grid.Row="1" 
                                   ItemsSource="{Binding Books}" 
                                   SelectedItem="{Binding SelectedBook}"
                                   Margin="5">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <TextBlock Text="{Binding Title}" FontWeight="Bold"/>
                                            <TextBlock Text="{Binding Author}" FontSize="10" Foreground="Gray"/>
                                            <TextBlock Text="{Binding ISBN}" FontSize="10" Foreground="Blue"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>

                            <!-- Book Action Buttons -->
                            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="Add" Command="{Binding AddBookCommand}"/>
                                <Button Content="Edit" Command="{Binding EditBookCommand}"/>
                                <Button Content="Delete" Command="{Binding DeleteBookCommand}"/>
                            </StackPanel>
                        </Grid>
                    </GroupBox>

                    <!-- Book Details -->
                    <GroupBox Grid.Column="1" Header="Book Details" Margin="5">
                        <Grid DataContext="{Binding SelectedBook}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Label Grid.Row="0" Grid.Column="0" Content="ISBN:"/>
                            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding ISBN}" IsReadOnly="True"/>

                            <Label Grid.Row="1" Grid.Column="0" Content="Title:"/>
                            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Title}" IsReadOnly="True"/>

                            <Label Grid.Row="2" Grid.Column="0" Content="Author:"/>
                            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Author}" IsReadOnly="True"/>

                            <Label Grid.Row="3" Grid.Column="0" Content="Publisher:"/>
                            <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Publisher}" IsReadOnly="True"/>

                            <Label Grid.Row="4" Grid.Column="0" Content="Year:"/>
                            <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding PublicationYear}" IsReadOnly="True"/>

                            <Label Grid.Row="5" Grid.Column="0" Content="Genre:"/>
                            <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding Genre}" IsReadOnly="True"/>

                            <Label Grid.Row="6" Grid.Column="0" Content="Description:" VerticalAlignment="Top"/>
                            <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding Description}" 
                                   IsReadOnly="True" TextWrapping="Wrap" AcceptsReturn="True"/>
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Status Bar -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <ProgressBar Width="200" Height="20" IsIndeterminate="{Binding IsLoading}" 
                           Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>