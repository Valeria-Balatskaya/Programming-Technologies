<Window x:Class="Library.WPF.Views.UserEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="User Details" Height="400" Width="450"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">

    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="15,5"/>
            <Setter Property="MinWidth" Value="80"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ID Field (Read-only for existing users) -->
        <Label Grid.Row="0" Grid.Column="0" Content="ID:" x:Name="IdLabel"/>
        <TextBox Grid.Row="0" Grid.Column="1" 
                 Text="{Binding Id}" 
                 IsReadOnly="True" 
                 Background="LightGray"
                 x:Name="IdTextBox"/>

        <!-- Name Field -->
        <Label Grid.Row="1" Grid.Column="0" Content="Name:*"/>
        <TextBox Grid.Row="1" Grid.Column="1" 
                 Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" 
                 x:Name="NameTextBox"/>

        <!-- Email Field -->
        <Label Grid.Row="2" Grid.Column="0" Content="Email:*"/>
        <TextBox Grid.Row="2" Grid.Column="1" 
                 Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                 x:Name="EmailTextBox"/>

        <!-- Phone Field -->
        <Label Grid.Row="3" Grid.Column="0" Content="Phone:"/>
        <TextBox Grid.Row="3" Grid.Column="1" 
                 Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- User Type Field -->
        <Label Grid.Row="4" Grid.Column="0" Content="Type:*"/>
        <ComboBox Grid.Row="4" Grid.Column="1" 
                  SelectedValue="{Binding Type}"
                  x:Name="TypeComboBox">
            <ComboBox.Items>
                <ComboBoxItem Content="Patron" Tag="Patron"/>
                <ComboBoxItem Content="Librarian" Tag="Librarian"/>
                <ComboBoxItem Content="Administrator" Tag="Administrator"/>
            </ComboBox.Items>
        </ComboBox>

        <!-- Registration Date Field -->
        <Label Grid.Row="5" Grid.Column="0" Content="Registered:"/>
        <TextBox Grid.Row="5" Grid.Column="1" 
                 Text="{Binding RegistrationDate, StringFormat=d}" 
                 IsReadOnly="True" 
                 Background="LightGray"/>

        <!-- Validation Messages -->
        <TextBlock Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" 
                   x:Name="ValidationMessage"
                   Foreground="Red" 
                   FontStyle="Italic"
                   Margin="5"
                   TextWrapping="Wrap"
                   VerticalAlignment="Top"/>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Save" Click="Save_Click" IsDefault="True"/>
            <Button Content="Cancel" Click="Cancel_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>